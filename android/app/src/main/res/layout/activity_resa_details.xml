<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".resaDetails"
    android:background="#E6E6E6">

   <include
       layout="@layout/action_bar"
       android:id="@+id/action_bar"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Date & Heure-->

            <LinearLayout


                android:clipToPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:elevation="10dp">

                <Button
                    android:id="@+id/date_btn"
                    android:elevation="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="12 Novembre 2018"
                    android:textSize="9dp"
                    android:width="100dp"
                    android:height="20dp"
                    android:background="@drawable/round_shape_btn_left"
                    android:gravity="center"
                    android:layout_gravity="center"
                    />


                <Button
                    android:id="@+id/time_btn"
                    android:layout_gravity="center"
                    android:elevation="10dp"
                    android:text="19:30"
                    android:textSize="9dp"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:width="25dp"
                    android:background="@drawable/round_shape_btn_right"
                    android:gravity="center" />
            </LinearLayout>


            <!--Info Passager-->

            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:background="#FFFFFF"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="VOTRE PASSAGER" />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <com.mikhaellopez.circularimageview.CircularImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@mipmap/pic"
                                app:civ_border_width="0dp"
                                app:civ_shadow="true"
                                app:civ_shadow_radius="5"
                                app:civ_shadow_color="#4B4A4A"/>
                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:textColor="#000000"
                                    android:textSize="15dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Moumen Moumen"/>
                                <LinearLayout
                                    android:layout_marginTop="2dp"
                                    android:layout_marginLeft="2dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <ImageView

                                        android:layout_width="17dp"
                                        android:layout_height="17dp"
                                        android:src="@drawable/ic_star_black_24dp"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="4.5"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                        <android.support.design.widget.FloatingActionButton

                            android:layout_marginEnd="20dp" android:layout_marginTop="5dp"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="end"
                            app:fabSize="mini"
                            android:id="@+id/call_passenger_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:onClick="onClickCall"
                            app:backgroundTint="#CFCFCF"
                            app:rippleColor="#7E7E7E"
                            app:srcCompat="@drawable/ic_local_phone_black_24dp" />

                    </RelativeLayout>

                </LinearLayout>



            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:orientation="vertical">


                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="TRAJET"/>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        //Image view here
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="17dp"
                                android:layout_height="20dp"

                                android:src="@drawable/circle_border_orange"/>

                            <ImageView
                                android:layout_marginTop="5dp"
                                android:layout_width="17dp"
                                android:layout_height="40dp"
                                android:src="@drawable/arrowsmallborder" />z

                            <ImageView
                                android:layout_marginTop="5dp"
                                android:layout_width="17dp"
                                android:layout_height="20dp"
                                android:src="@drawable/circle_border_black"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_marginStart="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            // Said hamdine
                            <RelativeLayout

                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_marginEnd="100dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Said Hamdine"
                                        android:textColor="#000000"
                                        android:textSize="17dp"
                                        android:textStyle="bold"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Chemin de yassir,Bir Mourad raiss"
                                        android:ellipsize="end"
                                        android:maxLines="1"/>

                                </LinearLayout>

                                <android.support.design.widget.FloatingActionButton

                                    android:id="@+id/location_btn_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_gravity="end"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginEnd="20dp"
                                    android:layout_weight="1"
                                    android:clickable="true"
                                    android:onClick="location_btn_1_click"
                                    app:backgroundTint="#2F7CF6"
                                    app:fabSize="mini"
                                    app:rippleColor="#11456F"
                                    app:srcCompat="@drawable/ic_near_me_black_24dp" />

                            </RelativeLayout>

                            <View
                                android:layout_marginRight="40dp"
                                android:layout_marginBottom="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="1.5dp"
                                android:background="#B4ABAB"
                                />
                            // Kouba
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_marginEnd="100dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Kouba"
                                        android:textSize="17dp"
                                        android:textColor="#000000"
                                        android:textStyle="bold"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Chemin de yassir,Bir Mourad raiss"
                                        android:ellipsize="end"
                                        android:maxLines="1"/>

                                </LinearLayout>
                                <android.support.design.widget.FloatingActionButton

                                    android:layout_marginEnd="20dp" android:layout_marginTop="5dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_gravity="end"
                                    app:fabSize="mini"
                                    android:id="@+id/location_btn_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:onClick="location_btn_2_click"
                                    android:layout_weight="1"
                                    android:clickable="true"
                                    app:backgroundTint="#2F7CF6"
                                    app:rippleColor="#11456F"
                                    app:srcCompat="@drawable/ic_near_me_black_24dp" />

                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                //Somme a encaisser
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:orientation="vertical">

                    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:orientation="horizontal" >
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="9dp"
                            android:text="SOMME A ENCAISSER"
                            />

                        <Button
                            android:id="@+id/details_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="10dp"
                            android:text="DÃ©tails"
                            android:textSize="15dp"
                            android:drawableRight="@drawable/ic_error_black_24dp"
                            android:background="#FFFFFF"
                            />

                    </RelativeLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="2 000 Da"
                        android:textStyle="bold"
                        android:textSize="35dp"
                        android:textColor="#000000"/>
                </LinearLayout>




            </android.support.v7.widget.CardView>

            // ID COURSE

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="9dp"
                        android:text="IDENTIFIANT DE LA COURSE"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="X321EQVC1"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#000000"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>



    </ScrollView>



</LinearLayout>